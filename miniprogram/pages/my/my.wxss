.container{
  justify-content: space-between;
}
#top{
  width: 100%;
  height: 540rpx;
  display: flex;
  position: relative;
  background-image:linear-gradient(to right,#00FFFF, #94D06C);
  background-size: cover;
  background-blend-mode: luminosity;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.agree-regu{
  color: green;
  display: inline;
  line-height: 100%;
}
.agree-wrap{
  height: 32rpx;
  font-size:25rpx;
  font-weight:300
}
.agree-check{
  display: inline;
  line-height: 100%;
}
checkbox.check{
  /* transform: scale(0.667) */
  width: 30rpx;
  height: 30rpx;
  margin: 0 8rpx 0 0;
}
checkbox .wx-checkbox-input {
  width: 30rpx;
  height: 30rpx;
}
.avator-box{
  width: 220rpx;
  height: 220rpx;
  overflow: hidden;
  border-radius: 50%;
  box-shadow: 0 18rpx 38rpx 0 rgba(22, 113, 22, 0.1);
  border: 1px solid rgba(0,0,0,0.07);
  background-color: rgba(0,0,0,0.07);
}
button.avatarBtn{
  padding: 0;
  margin: 0;
  height: 100%;
  width: 100%;
}
button.avatarBtn:disabled{
  background: grey;
}
.avator{
  width: 220rpx;
  height: 220rpx;
}
.avator-image {
  margin: 15rpx;
  padding: 20rpx;
  width: 150rpx;
  height: 150rpx;
}
#middle{
  margin-top: 20rpx;
  height: 200rpx;
  display: flex;
  justify-content: space-around;
  padding: 0 20rpx;
  box-shadow: 0 8rpx 10rpx 0 rgba(22, 113, 173, 0.1);
}
.flex-item{
  height: 180rpx;
  width: 250rpx;
  border: 1px solid transparent;
  border-radius: 8rpx;
  box-shadow: 4rpx 0 6rpx 0 rgba(119, 117, 117, 0.15),
  -4rpx 0rpx 6rpx 0 rgba(151, 150, 150, 0.15),
  0rpx -4rpx 6rpx 0 rgba(153, 151, 151, 0.15),
   0rpx 4rpx 6rpx 0 rgba(185, 182, 182, 0.15);
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 20rpx 0;
  box-sizing: border-box;
  align-items: center;
}
.flex-item image{
  height: 60rpx;
  width: 99rpx;
}
#account{
  margin-top: 10rpx;
  
}
.account-header{
  margin-left: 20rpx;
  font-size: 1.1em;
  font-weight: 550;
}
.account-box{
  background-color: white;
  margin-right: 30rpx;
  margin-left: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0rpx 40rpx 100rpx 0rpx rgba(0,0,0,0.07);
  margin-top: 30rpx;
  overflow: hidden;
}
.account-box .account-box-item{
  padding-left: 40rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.1);
  position: relative;
}
.account-box-item::before{
  font-family: "iconfont";
  display: block;
  content: "\e6a3";
  position: absolute;
  font-size: 34rpx;
  color: #aaa;
  line-height: 30rpx;
  height: 30rpx;
  width: 30rpx;
  text-align: center;
  top: 0rpx;
  bottom: 0;
  right: 30rpx;
  margin: auto;
}
.account-box .account-box-item:last-child{
  border-bottom: 0rpx;
}
#bottom{
  width: 100%;
  margin-top: 30rpx;
  bottom: 20rpx;
  font-size: 20rpx;
  text-align: center;
  height: 40rpx;
}