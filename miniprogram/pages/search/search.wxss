/* miniprogram/pages/search/search.wxss */

#search-box {
  display: flex;
  height: 100rpx;
  background-color: #fff;
  align-items: center;
}
form.form-wrap{
  flex: 1;
}
.search-wrap {
  margin: 0 20rpx;
  background-color: #f5f5f5;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 24rpx;
  color: #666;
  display: flex;
  align-items: center;
  border-radius: 5000rpx;
}
.search-wrap button{
  height: 70rpx;
  line-height: 70rpx;
}
.search-wrap [class*="icon"] {
  padding: 0 0.8em 0 1em;
}
.search {
  flex: 1;
  padding-right: 20rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 26rpx;
}

.action {
  margin-right: 20rpx;
}
.search-btn.button-hover{
  transform: translate(1rpx, 1rpx);
}
.shadow-blur::before {
  top: 4rpx;
  left: 4rpx;
  filter: blur(6rpx);
  opacity: 0.6;
}
.search-btn {
  border-radius: 5000rpx;
  background-color: #39b54a;
  color: #fff;
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 64rpx;
  line-height: 1;
  text-align: center;
  text-decoration: none;
  overflow: visible;
  margin-left: initial;
  transform: translate(0rpx, 0rpx);
  margin-right: initial;
}
